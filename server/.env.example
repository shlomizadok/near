# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/near-framework

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h

# Email Configuration (if needed)
